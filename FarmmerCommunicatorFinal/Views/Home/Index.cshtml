@{
    ViewBag.Title = "Home Page";
}


<div class="row">
    <h2 style="text-align:center">Categories</h2>
    @foreach (var Cat in Model.Categories)
    {
        <a href="/Category?CatId=@Cat.Id">
            <div class="col-md-4">
                <img src="~/Content/Images/@Cat.ImageUrl" />
                <h2>@Cat.Name</h2>

            </div>
        </a>
    }

</div>